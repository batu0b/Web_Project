@model Odev.Models.Employee

<div class="container mt-5">
    <h2 class="text-center">Yeni Çalışan Ekle</h2>
    <form asp-action="AddEmployee" method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Çalışan Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Position" class="form-label">Pozisyon</label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Kaydet</button>
    </form>
</div>
