@model WebProject.Models.Service

<h1>Service Details</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Duration</th>
        <td>@Model.Duration minutes</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.ToString("C")</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
