@model IEnumerable<Odev.Models.Appointment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tüm Randevular</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Tüm Randevularınız</h2>

        @if (!Model.Any())
        {
            <p class="text-center text-muted">Henüz bir randevunuz yok.</p>
        }
        else
        {
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>Tarih ve Saat</th>
                        <th>Bitiş Tarihi</th>
                        <th>Çalışan</th>
                        <th>Servisler</th>
                        <th>Durum</th>
                        <th>Onay Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <!-- Servislerin toplam süresi hesaplanıyor -->
                        var totalDuration = appointment.AppointmentServices
                        .Where(a => a.Service != null)
                        .Sum(a => a.Service!.Duration);

                        <!-- Randevu bitiş tarihi hesaplanıyor -->
                        var endDate = appointment.AppointmentDate.AddMinutes(totalDuration);

                        <tr>
                            <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@endDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@appointment.Employee?.Name</td>
                            <td>
                                <ul>
                                    @foreach (var service in appointment.AppointmentServices.Select(a => a.Service))
                                    {
                                        <li>@service?.Name (@service?.Duration dakika)</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                @if (appointment.IsApproved)
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Bekliyor</span>
                                }
                            </td>
                            <td>
                                @if (appointment.ApprovalDate.HasValue)
                                {
                                    @appointment.ApprovalDate.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Henüz Onaylanmadı</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
